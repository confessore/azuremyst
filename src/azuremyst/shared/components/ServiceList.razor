<div class="container-fluid">
    <div class="d-flex flex-column justify-content-center my-1">
        @if (Services != null)
        {
            foreach (var service in Services)
            {
                <div class="d-flex btn btn-success m-1" @onclick="async () => { await OnServiceClickedAsync(); }">
                    <ServiceItem
                        Name="@service.Item1"
                        Price="@service.Item2" />
                </div>
            }
        }
    </div>
</div>
